<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name='description' content='Kapper Bouidi Borgerhout Antwerpen met jaren ervaring in knippen, baard trimmen, ontkrulling voor zowel heren als kinderen.' />
    <meta name='keywords' content='kapper,wilrijk,antwerpen,kapsalon,knippen,brushen,scheerbeurt,snit,barbier,barbershop,herenkapper,edegem,berchem' />
    <meta name='author' content='Azdine El Jattari' />
    <meta name='designer' content='Azdine El Jattari' />
    <meta name='contact' content='azdine.eljattari@hotmail.com' />
    <meta name='copyright' content='Copyright (c) 2021 AzdineWebdeign &amp; development. All rights reserved.' />
    <link rel="shortcut icon" href="~/Images/favicon.png">
    <title>Bouidi</title>
    <link rel="stylesheet" href="assets/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="assets/css/slick.css">
    <link rel="stylesheet" href="assets/css/nice-select.css">
    <link rel="stylesheet" href="assets/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.3.1/dist/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link href="@Url.Content("~/Styles/Home.css")" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @RenderBody()
    <div class="container">
        <div class="row">
            <nav class="navbar navbar-expand-lg navbar-light" style="background-color: white;">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                        <a class="navbar-brand mobile-navbar-brand" href="#"><img class="img-responsive" alt="barber-logo" src="~/Images/logo.png" width="120" height="120" style="padding-top: 10px;" /></a>
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item pt-md-2">
                                <a class="nav-link active home" aria-current="page" href="#">Homepagina</a>
                            </li>
                            <li class="nav-item pt-md-2">
                                <a class="nav-link pricelist" href="#">Winkel</a>
                            </li>
                            <li class="nav-item pt-md-2">
                                <a class="nav-link pricelist" href="#">Afspraak maken</a>
                            </li>
                            <li class="nav-item pt-md-2">
                                <a class="nav-link shop" href="#" tabindex="-1" aria-disabled="true">Contact</a>
                            </li>
                        </ul>
                        <div class="container-nb">
                            <div class="row">
                                <div class="col-8 pt-md-2 pe-md-5">
                                    <form class="d-flex mr-2">
                                        <input class="form-control me-2" type="search" placeholder="Zoek" aria-label="Zoek">
                                        <button class="btn btn-outline-success btn-search" type="submit">
                                            <img alt="search" src="~/Images/searchglass.png" height="20" width="20" />
                                        </button>
                                    </form>
                                </div>
                                <div class="col-2 pt-md-2">
                                    <!-- Button trigger modal -->
                                    <span data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                        <button class="btn btn-outline-success btn-search" id="btn-shopping-cart" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Winkelkar">
                                            <img alt="shopping-cart" src="~/Images/shoppingcart.png" height="20" width="20"/>
                                        </button>
                                    </span>
                                    <!-- Modal -->
                                    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    ...
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    <button type="button" class="btn btn-primary">Understood</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-2 pt-md-2">
                                    <button class="btn btn-outline-success btn-search" id="btn-user-profile" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Profiel">
                                        <img alt="shopping-cart" src="~/Images/profile.png" height="20" width="20" />
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <div class="row row-section">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4">
                    <div class="container border-end border-dark">
                        <div class="text-center">
                            <div class="shadow p-2 mb-5 bg-body rounded w-75 ms-5 rounded-pill section-cards-rounded-pill" id="rounded-pill-quality-img">
                                <p class="card-head-title text-decoration-underline">Gegarandeerde kwaliteit</p>
                                <img alt="quality-image" src="~/Images/icons8-quality-static.png" width="45" height="45" class="img-responsive" id="quality-img" />
                            </div>
                            <div class="shadow p-2 mb-5 bg-body rounded w-75 ms-5 rounded-pill section-cards-rounded-pill" id="rounded-pill-cheap-img">
                                <p class="card-head-title text-decoration-underline">Voordelig in prijs</p>
                                <img alt="quality-image" src="~/Images/icons8-cheap-static.png" width="45" height="45" class="img-responsive" id="cheap-img" />
                            </div>
                            <div class="shadow p-2 mb-5 bg-body rounded w-75 ms-5 rounded-pill section-cards-rounded-pill" id="rounded-pill-schedule-img">
                                <p class="card-head-title text-decoration-underline">Snelle service</p>
                                <img alt="quality-image" src="~/Images/icons8-schedule-static.png" width="45" height="45" class="img-responsive" id="schedule-img" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <section class="sec sec-img">
                        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-indicators">
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                            </div>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="https://wallpaperaccess.com/full/1936423.jpg" alt="Barbershop Wallpapers - Top Free Barbershop Backgrounds - WallpaperAccess/>" class="d-block w-100 carousel-image">
                                </div>
                                <div class="carousel-item">
                                    <img src="https://www.wallpapertip.com/wmimgs/27-276995_wallpaper-barbershop.jpg" class="d-block w-100 carousel-image" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src="https://www.wallpapertip.com/wmimgs/95-956819_barber.jpg" class="d-block w-100 carousel-image" alt="...">
                                </div>
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Vorige</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Volgende</span>
                            </button>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <div class="container-section-two" style="margin-top: 8%; margin-bottom: 8%; box-shadow: 0 -5px 5px -3px #333, 0 -5px 5px -3px #333, 0 5px 5px -1px #333">
        <div class="container d-flex justify-content-center">
            <div class="row">
                <div class="col-md-12">
                    <section class="sec sec-servicesbox-info d-flex justify-content-center">
                        <div class="partial-border text-left">
                            <p class="head-title-servicesbox">Services</p>
                            <p class="body-servicesbox">
                                Het hout aan de muren, het eigenzinnige antiek en de geur van pure haarproducten versmelten tot een heerlijke cocktail.
                                In wezen is kapper Bouidi er voor mannen die de voorkeur geven aan een no-nonsense omgeving boven de salon.
                                Maar tegelijkertijd verwelkomen we ook mooie en modieuze kinderen met open armen voor een professioneel kapsel.
                                Kom binnen, maak het uzelf gemakkelijk en laat u overweldigen door de magie van onze kappers.
                            </p>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <div class="container-section-three" style="margin-bottom: 8%; box-shadow: 0 -5px 5px -3px #333, 0 -5px 5px -3px #333, 0 5px 5px -1px #333">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <section class="sec sec-pricelist d-flex justify-content-between">
                        <div class="card shadow-lg" style="width: 18rem;">
                            <img src="https://image.freepik.com/free-photo/barber-clips-handsome-kid-sides-with-scissors_99043-3118.jpg" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title" style="color: black; font-family: 'Teko', sans-serif; font-size: 30px">Kinderen</h5>
                                <p class="card-text" style="color: black; font-family: 'Roboto Condensed', sans-serif;">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                <a href="#" class="btn btn-theme">Maak afspraak</a>
                            </div>
                        </div>
                        <div class="pt-md-5">
                            <img alt="barber-chair-img" src="https://www.iconsdb.com/icons/preview/white/barbers-chair-xxl.png" />
                        </div>
                        <div class="card shadow-lg" style="width: 18rem;">
                            <img src="https://www.kappers.nl/files/shares/content/Fotolia_96686953_Subscription_Monthly_M.jpg" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title" style="color: black; font-family: 'Teko', sans-serif; font-size: 30px;">Heren</h5>
                                <p class="card-text" style="color: black; font-family: 'Roboto Condensed', sans-serif;">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                                <a href="#" class="btn btn-theme">Maak afspraak</a>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer">
        <div class="container">
            <p class="text-muted">Place sticky footer content here.</p>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <script>
        $(function () {
            if ($('#rounded-pill-quality-img').mouseover(function () {
                $("#quality-img").attr("src", "Images/icons8-quality.gif");
            }))

                if ($('#rounded-pill-quality-img').mouseleave(function () {
                    $("#quality-img").attr("src", "Images/icons8-quality-static.png");
                }))

                    if ($('#rounded-pill-cheap-img').mouseover(function () {
                        $("#cheap-img").attr("src", "Images/icons8-cheap.gif");
                    }));

            if ($('#rounded-pill-cheap-img').mouseleave(function () {
                $("#cheap-img").attr("src", "Images/icons8-cheap-static.png");
            }));

            if ($('#rounded-pill-schedule-img').mouseover(function () {
                $("#schedule-img").attr("src", "Images/icons8-schedule.gif");
            }));

            if ($('#rounded-pill-schedule-img').mouseleave(function () {
                $("#schedule-img").attr("src", "Images/icons8-schedule-static.png");
            }));
        });
    </script>
    <script>
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip()
        })
    </script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
