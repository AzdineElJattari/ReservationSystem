<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name='description' content='Kapper Bouidi Borgerhout Antwerpen met jaren ervaring in knippen, baard trimmen, ontkrulling voor zowel heren als kinderen.' />
    <meta name='keywords' content='kapper,wilrijk,antwerpen,kapsalon,knippen,brushen,scheerbeurt,snit,barbier,barbershop,herenkapper,edegem,berchem' />
    <meta name='author' content='Azdine El Jattari' />
    <meta name='designer' content='Azdine El Jattari' />
    <meta name='contact' content='azdine.eljattari@hotmail.com' />
    <meta name='copyright' content='Copyright (c) 2021 AzdineWebdeign &amp; development. All rights reserved.' />
    <link rel="shortcut icon" href="~/Images/favicon.png">
    <title>Salon & Barbershop - Bouidi</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" />
    <link rel="stylesheet" href="assets/css/style.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Styles/Home/Home.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container-color-body" style="z-index: -999"></div>
    <div class="container container-navbar">
        <div class="row">
            <nav class="navbar navbar-expand-lg navbar-light" data-aos="fade-down">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                        <a class="navbar-brand mobile-navbar-brand" href="#" data-aos="fade-down"><img class="img-responsive" alt="barber-logo" src="~/Images/logo.png" width="120" height="120" style="padding-top: 10px;" /></a>
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item pt-md-2" data-aos="fade-down">
                                <a>@Html.ActionLink("Homepagina", "Home", "Home", null, new { @class = "nav-link pricelist" })</a>
                            </li>
                            <li class="nav-item pt-md-2" data-aos="fade-down">
                                <a>@Html.ActionLink("Winkel", "Index", "Shop", null, new { @class = "nav-link pricelist" })</a>
                            </li>
                            <li class="nav-item pt-md-2" data-aos="fade-down">
                                <a>@Html.ActionLink("Afspraak maken", "Index", "Appointment", new { @class = "nav-link pricelist" })</a>
                            </li>
                            <li class="nav-item pt-md-2" data-aos="fade-down">
                                <a>@Html.ActionLink("Contact", "Index", "Contact", new { @class = "nav-link pricelist" })</a>
                            </li>
                        </ul>
                        <div class="container-nb">
                            <div class="row">
                                <div class="col-5 pt-md-2 pe-md-4">
                                    <form class="d-flex mr-2" data-aos="fade-down">
                                        <input class="form-control me-2" type="search" placeholder="Zoek" aria-label="Zoek">
                                        <button class="btn btn-outline-success btn-search" type="submit">
                                            <img alt="search" src="~/Images/searchglass.png" height="20" width="20" />
                                        </button>
                                    </form>
                                </div>
                                <!-- Button trigger modal -->
                                <div class="col-4 pt-md-2">
                                    <span data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                        <a class="btn btn-outline-succes btn-search" style="background-color: #000; color: white; font-family: 'Roboto Condensed', sans-serif; font-size: 16px; border-radius: .2rem;" data-aos="fade-down" id="btn-shopping-cart" href="#">
                                            <i class="fa fa-shopping-cart"></i> Winkelkar
                                            <span class="badge rounded-pill bg-light text-dark">0</span>
                                        </a>
                                    </span>
                                    <!-- Modal -->
                                </div>
                                <div class="col-3 pt-md-2">
                                    <span data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                        <a class="btn btn-outline-succes btn-search" style="background-color: #000; color: white; font-family: 'Roboto Condensed', sans-serif; font-size: 16px; border-radius: .2rem;" data-aos="fade-down" id="btn-shopping-cart" href="#">
                                            <i class="fa fa-user"></i> Profiel
                                        </a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    @RenderBody()
<footer class="footer" style="color: white;">
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-lg-4 col-xl-3" style="font-family: 'Roboto Condensed', sans-serif;">
                <h5><i class="fas fa-info-circle"></i> <span style="font-size: 24px;">Over ons</span></h5>
                <hr class="bg-white mb-2 mt-0 d-inline-block mx-auto w-25">
                <p class="mb-0">
                    Een kapper met bakken ervaring en met #1 fade's in Antwerpen
                </p>
            </div>

            <div class="col-md-2 col-lg-2 col-xl-2 mx-auto" style="font-family: 'Roboto Condensed', sans-serif;">
                <h5><i class="fas fa-book"></i> <span style="font-size: 24px;">Pagina's</span></h5>
                <hr class="bg-white mb-2 mt-0 d-inline-block mx-auto w-25">
                <ul class="list-unstyled">
                    <li>
                        <a>@Html.ActionLink("Homepagina", "Home", "Home", new { style = "color: white; text-decoration: none;" })</a>
                    </li>
                    <li>
                        <a>@Html.ActionLink("Winkel", "Index", "Shop", new { style = "color: white; text-decoration: none;" })</a>
                    </li>
                    <li>
                        <a>@Html.ActionLink("Afspraak maken", "Index", "Appointment", new { style = "color: white; text-decoration: none;" })</a>
                    </li>
                    <li>
                        <a>@Html.ActionLink("Contact", "Index", "Contact", new { style = "color: white; text-decoration: none;" })</a>
                    </li>
                </ul>
            </div>
            <div class="col-md-4 col-lg-3 col-xl-3" style="font-family: 'Roboto Condensed', sans-serif;">
                <h5><i class="fas fa-file-signature"></i> <span style="font-size: 24px;">Contact</span></h5>
                <hr class="bg-white mb-2 mt-0 d-inline-block mx-auto w-25">
                <ul class="list-unstyled">
                    <li><i class="fa fa-home me-2"></i>Salon & Barbershop - Bouidi</li>
                    <li><i class="fa fa-envelope me-2"></i> Bouidi@gmail.com</li>
                    <li><i class="fa fa-phone me-2"></i> +32484956749</li>
                    <li><i class="fa fa-print me-2"></i> +32485969987</li>
                </ul>
            </div>
            <div class="col-12 copyright mt-5 d-flex flex-column" style="align-items: center; font-family: 'Roboto Condensed', sans-serif; font-size: 13px;">
                <div class="row mb-md-3">
                    <div class="col-md-2 me-md-2 mt-md-2">
                        <img src="~/Images/mastercard.png" width="35" />
                    </div>
                    <div class="col-md-2 me-md-2 mt-md-2">
                        <img src="~/Images/maestro.png" width="35" />
                    </div>
                    <div class="col-md-2 me-md-2">
                        <img src="~/Images/mistercash.png" width="35" />
                    </div>
                    <div class="col-md-2 me-md-2 mt-md-2">
                        <img src="~/Images/paypal.png" width="25" />
                    </div>
                </div>
                <div class="row border-top border-white w-100">
                    <p class="mt-md-4 text-center">
                        <a href="#" onclick='window.scrollTo({top: 0, behavior: "smooth"})' style="color: white;">Back to top</a>
                    </p>
                    <p class="text-center">created with <i class="fa fa-heart"></i> by <a href="#" style="color: white; text-decoration: none;"><i>El Jattari Azdine</i></a> | <span>v. 1.0</span></p>
                </div>
            </div>
        </div>
    </div>
</footer>
    @Html.Partial("~/Views/Shared/Partial/_ShoppingcartModal.cshtml")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <script>
        $(function () {
            if ($('#rounded-pill-quality-img').mouseover(function () {
                console.log("JE ZIT ERIN!");
                $("#quality-img").attr("src", "Images/icons8-quality.gif");
            }))

                if ($('#rounded-pill-quality-img').mouseleave(function () {
                    $("#quality-img").attr("src", "Images/icons8-quality-static.png");
                }))

                    if ($('#rounded-pill-cheap-img').mouseover(function () {
                        $("#cheap-img").attr("src", "Images/icons8-cheap.gif");
                    }));

            if ($('#rounded-pill-cheap-img').mouseleave(function () {
                $("#cheap-img").attr("src", "Images/icons8-cheap-static.png");
            }));

            if ($('#rounded-pill-schedule-img').mouseover(function () {
                $("#schedule-img").attr("src", "Images/icons8-schedule.gif");
            }));

            if ($('#rounded-pill-schedule-img').mouseleave(function () {
                $("#schedule-img").attr("src", "Images/icons8-schedule-static.png");
            }));
        });
    </script>
    <script>
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip()
        })
    </script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
