@model WebshopBouidi.Models.ViewModel
@{
    ViewBag.Title = "Appointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
    @Styles.Render("~/Styles/Appointment/Appointment.css")
}

<div class="container-fluid banner3">
    <div class="py-5 banner">
        <div class="container" data-aos="zoom-in">
            <div class="row w-100 d-flex justify-content-center mt-md-5">
                <div class="col-md-7 col-lg-5 col-appointment-mobile">
                    <h3 class="appointment-headtext my-3"><i class="fas fa-calendar-check"></i> Reserveren</h3>
                    @Html.Partial("~/Views/Appointment/Create.cshtml")
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" style="text-align: center;" id="exampleModalLabel">
                        Reservatie voor <span id="selected-date"></span> is succcesvol ingepland!
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="text-align: center;">
                    <img src="~/Images/icons8-quality.gif" style="width: 80px;" />
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $("#selected-date").html($("#appointmentdate").val());
</script>